<body class="{{ body_class }}">

  <!-- Google Tag Manager (noscript) -->
<noscript>
  <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-XXXXXXX"
  height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
  <!-- End Google Tag Manager (noscript) -->

{% if (function('get_theme_mod','wpt_mobile_menu_layout') == 'offcanvas') %}
    {{ function('get_template_part', 'template-parts/mobile-off-canvas') }}
{% endif %}
  {% if options.contact_bar.show == true %}
      {% set contact_bar = options.meta('contact_bar') %}
      <div class="pt2 pb2" style="background-color: {{ options.contact_bar.color }}">
          <div class="grid-x grid-container">
              <a href="tel:{{ options.phone }}" class="mr2 mr3-ns phone-call">
                  <i class="fal fa-phone"></i> {{ options.phone }}
              </a>
              <a href="tel:{{ options.email }}">
                  <i class="fal fa-envelope"></i> {{ options.email }}
              </a>
          </div>
      </div>
  {% endif %}
  <header class="site-header" role="banner">
    <div
      class="site-title-bar title-bar"
      {{ function('foundationpress_title_bar_responsive_toggle') }}>
      <div class="title-bar-left">
        <a href="{{site.link}}">
          <img
            class="logo"
            src="{{ theme.link }}/src/assets/images/demo/semantic.svg"
            alt=""
          />
        </a>
      </div>
      <div class="title-bar-right">
        <button
          aria-label="{{ __('Main Menu', 'foundationpress') }}"
          class="menu-icon"
          type="button"
          data-toggle="{{ function('foundationpress_mobile_menu_id') }}"
        ></button>
      </div>
    </div>

    <nav class="site-navigation top-bar" role="navigation">
      <div class="top-bar-left">
          <a href="{{site.link}}">
        <img
          class="logo"
          src="{{ theme.link }}/src/assets/images/demo/semantic.svg"
          alt=""
        />
        </a>
      </div>
      <div class="top-bar-right">
        {{ function('foundationpress_top_bar_r') }}

        {% if (function('get_theme_mod', 'wpt_mobile_menu_layout') == false) or (function('get_theme_mod', 'wpt_mobile_menu_layout') == 'topbar') %}
          
        {{ function('get_template_part','template-parts/mobile-top-bar') }}

        {% endif %}
      </div>
    </nav>
  </header>
